package LocalChat;

import java.io.IOException;
import java.net.*;

public class Client {
    Socket socket;
    
    Client(String IP, int theSocket){
        try{
        socket = new Socket(IP, theSocket);
        ChatParticipant Golf = new ChatParticipant(socket);
        //skapa en participant
        }
        catch(IOException e){e.getMessage();}
        finally {
            try{
                socket.close();
            }
            catch(IOException e){
                System.out.println("Socket can't close");
            }
        }
    }
        
        public Socket getSocket(){
            return socket;
        }
}
